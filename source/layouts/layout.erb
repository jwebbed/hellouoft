  <%= stylesheet_link_tag :site %>
</head>

<body class="<%= page_classes %>">
  <header class="header">
    <div class="container">
      <div class="header__logo">
        <%= link_to 'Home', '/', { class: 'header__logo__img' } %>
      </div>

      <nav class="header__nav">
        <%= link_to 'Home', '/' %>
        <%= link_to 'Candidates', '/candidates' %>
        <%= link_to 'Platform', '/platform' %>
      </nav>
    </div>
  </header>

  <main class="content container">
    <% if current_page.data.title %>
      <section class="content__header">
        <p class="content__header__text"><%= current_page.data.title %></p>
      </section>
    <% end %>

    <%= yield %>
  </main>

